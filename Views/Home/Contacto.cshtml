@{
ViewData["Title"] = "Contacto";
}

<div class="container">
    <h1 class="mb-4">Formulario de contacto</h1>
    <form asp-controller="Home" asp-action="Contacto">
        <div class="mb-3">
            <label for="Nombre" class="form-label">Nombre</label>
            <input type="text" class="form-control" id="nombre" required>
        </div>
        <div class="mb-3">
            <label for="emailAddress" class="form-label">Dirección de correo electrónico</label>
            <input type="email" class="form-control" id="emailAddress" placeholder="name@example.com" required>
        </div>
        <div class="mb-3">
            <label for="mensaje" class="form-label">Mensaje</label>
            <textarea class="form-control" id="mensaje" rows="10" style="resize: none;" required></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Enviar mensaje</button>
    </form>
</div>
